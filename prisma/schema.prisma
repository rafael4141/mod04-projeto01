generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid())
  name       String
  email      String   @unique
  birth_date String
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Film {
  id           String   @id @default(uuid())
  name         String   @unique
  description  String
  release_year Int
  linkImage    String
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
